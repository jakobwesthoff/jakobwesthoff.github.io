---
import "../styles/global.css";
import { getImage } from "astro:assets";
import avatar from "../assets/avatar.png";

interface Props {
  title: string;
  description: string;
  bodyClass?: string;
}

const { title, description, bodyClass } = Astro.props;

const backgroundAvatar = await getImage({
  src: avatar,
  width: 40,
  height: 40,
  format: "webp",
  quality: 60,
});
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, viewport-fit=cover" />
    <meta name="description" content={description} />
    <meta name="author" content="Jakob Westhoff" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{title}</title>
  </head>
  <body
    class:list={[
      "pt-safe-top pb-safe-bottom pl-safe-left pr-safe-right relative flex min-h-dvh bg-[#F3AB27]",
      bodyClass,
    ]}
    style={`--bgImage: url(${backgroundAvatar.src})`}
  >
    <slot />
  </body>
</html>
