---
import "../styles/global.css";
import { getImage } from "astro:assets";
import avatar from "../assets/avatar.png";

// Optimize background avatar (blurred version)
const backgroundAvatar = await getImage({
  src: avatar,
  width: 40,
  height: 40,
  format: "webp",
  quality: 60,
});

const projects = [
  {
    name: "DialogDetective",
    tagline: "AI-powered TV episode identification from dialogue",
    color: "#0ea5e9",
    url: "https://dialogdetective.westhoffswelt.de",
  },
  {
    name: "jlif",
    tagline:
      "A command-line tool for scanning multi-object JSON logs with syntax highlighting and filtering",
    color: "#f59e0b",
    url: "https://jlif.westhoffswelt.de",
  },
  {
    name: "podpull",
    tagline: "Download and sync podcasts from RSS feeds",
    color: "#7c3aed",
    url: "https://podpull.westhoffswelt.de",
  },
  {
    name: "blendwerk",
    tagline: "File-based mock HTTP/HTTPS server",
    color: "#22c55e",
    url: "https://blendwerk.westhoffswelt.de",
  },
];
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, viewport-fit=cover" />
    <meta name="description" content="Projects by Jakob Westhoff" />
    <meta name="author" content="Jakob Westhoff" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>Projects - Jakob Westhoff</title>
    <style define:vars={{ bgImage: `url(${backgroundAvatar.src})` }}>
      body::before {
        content: "";
        position: fixed;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        width: 120dvw;
        height: 120dvh;
        z-index: -10;
        background-image: var(--bgImage);
        background-size: cover;
        background-position: center;
        filter: blur(80px) saturate(1.3) brightness(1.1) sepia(0.3) hue-rotate(-10deg);
      }
      body::after {
        content: "";
        position: fixed;
        inset: 0;
        z-index: -10;
        background: linear-gradient(to bottom right, rgb(253 186 116 / 0.4), rgb(251 191 36 / 0.4));
        mix-blend-mode: overlay;
      }
    </style>
  </head>
  <body
    class="pt-safe-top pb-safe-bottom pl-safe-left pr-safe-right relative flex min-h-dvh flex-col bg-[#F3AB27]"
  >
    <!-- Back navigation -->
    <a
      href="/"
      class="absolute top-4 left-4 z-20 rounded-full bg-gray-900/10 px-4 py-2 text-sm font-medium text-gray-900 transition-colors hover:bg-gray-900/20"
    >
      &larr; Home
    </a>

    <div class="relative z-10 mx-auto w-full max-w-3xl px-6 pt-20 pb-12">
      <div class="mb-12 text-center">
        <h1 class="text-4xl font-bold text-gray-900">Projects<span class="text-gray-900/30">*</span></h1>
        <p class="mt-2 text-base italic text-gray-900/50">*built between midnight and coffee</p>
      </div>

      <div class="flex flex-col gap-4">
        {
          projects.map((project) => (
            <a
              href={project.url}
              target="_blank"
              rel="noopener noreferrer"
              class="group block rounded-xl border border-white/30 bg-white/15 px-6 py-5 shadow-sm transition-all duration-200 hover:bg-white/25"
            >
              <div class="flex flex-col items-start justify-between gap-1 sm:flex-row sm:items-center sm:gap-4">
                <span class="text-xl font-semibold text-gray-900" style={`color: ${project.color}`}>
                  {project.name}
                </span>
                <span class="text-sm text-gray-700">{project.tagline}</span>
              </div>
            </a>
          ))
        }
      </div>
    </div>
  </body>
</html>
