---
import "../styles/global.css";
import { getImage } from "astro:assets";
import avatar from "../assets/avatar.png";

// Optimize background avatar (blurred version)
const backgroundAvatar = await getImage({
  src: avatar,
  width: 40,
  height: 40,
  format: "webp",
  quality: 60,
});
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, viewport-fit=cover" />
    <meta name="description" content="Projects by Jakob Westhoff" />
    <meta name="author" content="Jakob Westhoff" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>Projects - Jakob Westhoff</title>
    <style define:vars={{ bgImage: `url(${backgroundAvatar.src})` }}>
      body::before {
        content: "";
        position: fixed;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        width: 120dvw;
        height: 120dvh;
        z-index: -10;
        background-image: var(--bgImage);
        background-size: cover;
        background-position: center;
        filter: blur(80px) saturate(1.3) brightness(1.1) sepia(0.3) hue-rotate(-10deg);
      }
      body::after {
        content: "";
        position: fixed;
        inset: 0;
        z-index: -10;
        background: linear-gradient(to bottom right, rgb(253 186 116 / 0.4), rgb(251 191 36 / 0.4));
        mix-blend-mode: overlay;
      }
    </style>
  </head>
  <body
    class="pt-safe-top pb-safe-bottom pl-safe-left pr-safe-right relative flex min-h-dvh items-center justify-center bg-[#F3AB27]"
  >
    <div class="relative z-10 px-4 text-center">
      <h1 class="text-4xl font-bold text-gray-900">Projects</h1>
      <p class="mt-4 text-lg text-gray-700">Coming soon</p>
    </div>

    <!-- Back navigation -->
    <a
      href="/"
      class="absolute top-4 left-4 z-10 rounded-full bg-gray-900/10 px-4 py-2 text-sm font-medium text-gray-900 transition-colors hover:bg-gray-900/20"
    >
      &larr; Home
    </a>
  </body>
</html>
